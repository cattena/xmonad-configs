!-----------------------------------------------------------------

!-----------------------------------------------------------------
! URXVT-Specific stuff ------------------------------------------¬
!-----------------------------------------------------------------

! Appearance

URxvt.font:                 xft:Inconsolata:regular:size=10
URxvt.imFont:               xft:Inconsolata:regular:size=10
URxvt.boldFont:             xft:Inconsolata:regular:size=10
URxvt.italicFont:           xft:Inconsolata:regular:size=10
URxvt.boldItalicFont:       xft:Inconsolata:regular:size=10

URxvt.foreground:           #e8e8e8
URxvt.background:           #050505
URxvt.borderColor:          #050505
URxvt.borderless:           true
URxvt.highlightColor:       #a761c2
URxvt.highlightTextColor:   #151515

URxvt.cursorColor:          #dedede
URxvt.cursorColor2:         #151515
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

URxvt.depth: 32
URxvt.internalBorder: 5

! Bold/Italic/Underline Styles
URxvt.colorBD:              #ffffff
URxvt.colorIT:              #a761c2
URxvt.colorUL:              #6d9cbe
URxvt.underlineColor:       #333333

! ScrollBar
URxvt.scrollBar:            false
URxvt.scrollBar_right:      true
URxvt.scrollstyle:          plain
URxvt.scrollColor:          #ffffff

URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true
URxvt.scrollTtyOutput:      false

URxvt.buffered:             true
URxvt.pointerBlank:         true
URxvt.underlineURLs:        true

! Transparency
URxv.transparent:          true
URxvt.shading:              5

! Clickable URLs

URxvt.perl-ext-common:  default,matcher
URxvt.url-launcher:     /usr/bin/google-chrome
URxvt.matcher.button:   1

URxvt.keysym.C-o:  perl:matcher:last
URxvt.keysym.M-o:  perl:matcher:list

!-¬
!-----------------------------------------------------------------

!-----------------------------------------------------------------
! XFT -----------------------------------------------------------¬
!-----------------------------------------------------------------

Xft.antialias:  true
Xft.autohint:   0
Xft.dpi:        96
Xft.hinting:    true
Xft.hitstyle:   hintfull
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

